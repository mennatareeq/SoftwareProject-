<% if !flash[:notice].blank? %>
<div class = "alert alert-info">
	<%= flash[:notice] %>
</div>
<% end %>
<br />
<%= link_to "New Pdf",new_pdf_path, class: "btn btn-primary"%>
<br/>
<br/>
<table class="table table-bordered table-striped">
	<thread>
		<tr>
			<th>Name</th>
			<th>Download link</th>
			<th> &nbsp; </th>
		</tr>
		</thread>
		<tbody>
			<% @pdfs.each do|pdf| %>
			<tr>
				<td><%= pdf.name %></td>
				<td><%= link_to " Download & View Pdf ", pdf.attachment_url %></td>
				<td><%= button_to "delete", pdf, method: :delete, class: "btn btn-danger", confirm: "are you sure that you wish to delete #{pdf.name}?" %> </td>
				
			</tr>
			<% end %>
		</tbody>
	</table>

